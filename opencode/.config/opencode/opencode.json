{
	"$schema": "https://opencode.ai/config.json",
	"theme": "everforest",
	"permission": {
		"find": "allow",
		"git": "ask",
		"golangci-lint": "allow",
		"grep": "allow",
		"head": "allow",
		"jj": "ask",
		"ls": "allow",
		"rg": "allow",
		"sort": "allow",
		"tail": "allow",
		"tree": "allow",
		"bash": {
			"*": "ask"
		}
	},
	"agent": {
		"code-reviewer": {
			"description": "Reviews code for best practices and potential issues",
			"prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
			"tools": {
				"write": false,
				"edit": false
			}
		}
	},
	"mcp": {
		"jj": {
			"type": "local",
			"command": ["npx", "-y", "jj-mcp-server"],
			"enabled": true,
			"environment": {
				"MY_ENV_VAR": "my_env_var_value"
			}
		}
	}
}
