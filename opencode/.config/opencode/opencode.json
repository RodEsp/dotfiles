{
	"$schema": "https://opencode.ai/config.json",
	"theme": "everforest",
	"permission": {
		"codesearch": "allow",
		"doom_loop": "allow",
		"external_directory": "ask",
		"glob": "allow",
		"grep": "allow",
		"list": "allow",
		"lsp": "allow",
		"read": {
			"*": "allow",
			"*.env": "deny",
			"*.env.*": "deny",
			"*.env.example": "allow"
		},
		"task": "ask",
		"todoread": "allow",
		"todowrite": "allow",
		"websearch": "allow",
		"bash": {
			"*": "ask",
			"head": "allow",
			"find": "allow",
			"git": "ask",
			"golangci-lint": "allow",
			"grep": "allow",
			"jj": "ask",
			"ls": "allow",
			"rg": "allow",
			"sort": "allow",
			"tail": "allow",
			"tree": "allow"
		}
	},
	"agent": {
		"code-reviewer": {
			"description": "Reviews code for best practices and potential issues",
			"prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
			"tools": {
				"write": false,
				"edit": false
			}
		}
	},
	"mcp": {
		"jj": {
			"type": "local",
			"command": ["npx", "-y", "jj-mcp-server"],
			"enabled": true,
			"environment": {
				"MY_ENV_VAR": "my_env_var_value"
			}
		}
	}
}
